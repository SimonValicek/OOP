      <Label layoutX="80.0" layoutY="250.0" style="-fx-font-weight: bold; -fx-text-fill: white;" text="Kilometer:" />
      <Label fx:id="location_label" layoutX="160.0" layoutY="250.0" prefHeight="18.0" prefWidth="252.0" style="-fx-font-weight: bold; -fx-text-fill: white;" />
      <Button fx:id="add_to_route" layoutX="356.0" layoutY="531.0" mnemonicParsing="false" onAction="#addToRoute" text="Add to Route" />
      <Button fx:id="step_back" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#stepBack" text="Return" />
      <Label fx:id="notification_label" alignment="CENTER" contentDisplay="CENTER" layoutX="100.0" layoutY="500.0" prefHeight="20.0" prefWidth="600.0" textOverrun="CENTER_WORD_ELLIPSIS">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <ChoiceBox fx:id="choice_box" layoutX="635.0" layoutY="41.0" prefWidth="150.0" />
      <Label layoutX="669.0" layoutY="14.0" text="Select Route">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
