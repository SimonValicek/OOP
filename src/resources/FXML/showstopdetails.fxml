   <children>
      <ImageView fx:id="stop_image" fitHeight="150.0" fitWidth="200.0" layoutX="300.0" layoutY="100.0" pickOnBounds="true" preserveRatio="true" />
      <Label fx:id="stop_title" alignment="TOP_CENTER" layoutX="150.0" layoutY="40.0" prefHeight="20.0" prefWidth="500.0" textFill="#b10cb1">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label layoutX="80.0" layoutY="275.0" prefHeight="18.0" prefWidth="41.0" style="-fx-font-weight: bold; -fx-text-fill: white;" text="State:" />
      <Label layoutX="80.0" layoutY="300.0" style="-fx-font-weight: bold; -fx-text-fill: white;" text="City:" />
      <Label fx:id="state_label" layoutX="160.0" layoutY="275.0" prefHeight="18.0" prefWidth="341.0" style="-fx-font-weight: bold; -fx-text-fill: white;" />
      <Label fx:id="city_label" layoutX="160.0" layoutY="300.0" prefHeight="18.0" prefWidth="332.0" style="-fx-font-weight: bold; -fx-text-fill: white;" />
      <Label layoutX="80.0" layoutY="350.0" style="-fx-font-weight: bold; -fx-text-fill: white;" text="Description:" />
      <Label fx:id="desc_label" alignment="TOP_LEFT" depthTest="ENABLE" layoutX="160.0" layoutY="350.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="100.0" prefWidth="575.0" style="-fx-font-weight: bold; -fx-text-fill: white;" wrapText="true" />
      <Label layoutX="80.0" layoutY="325.0" style="-fx-font-weight: bold; -fx-text-fill: white;" text="Added by:" />
